<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.handheld.IDCard.MainActivity" 
    android:background="@drawable/idbg">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="0sp"
	        android:layout_weight="6"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0sp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="姓名："/>
	            <EditText 
	                android:id="@+id/editText_name"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:editable="false"
	                android:hint="请输入"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0sp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="性别："/>
	            <EditText 
	                android:id="@+id/editText_sex"
	                android:layout_width="160dp"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:editable="false"
	                android:hint="男/女"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="民族："/>
	            <EditText 
	                android:id="@+id/editText_nation"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:editable="false"
	                android:hint="壮"/>
	        </LinearLayout>
	         <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0sp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="出生："/>
	            <EditText 
	                android:id="@+id/editText_year"
	                android:layout_width="200dp"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:editable="false"
	                android:hint="xxxx"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="年"/>
	            <EditText 
	                android:id="@+id/editText_month"
	                android:layout_width="100dp"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:editable="false"
	                android:hint="xx"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="月"/>
	            <EditText 
	                android:id="@+id/editText_day"
	                android:layout_width="100dp"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:editable="false"
	                android:hint="xx"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="日"/>
	            
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="120sp"
	            android:orientation="horizontal"
	            >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="住址："/>
	            <EditText 
	                android:id="@+id/editText_address"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:lines="2"
	                android:editable="false"
	                android:hint="请输入"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0sp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="身份证号:"/>
	            <EditText 
	                android:id="@+id/editText_IDCard"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:editable="false"
	                android:hint="请输入"
	                android:text=""/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0sp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="签发机关："/>
	            <EditText 
	                android:id="@+id/editText_office"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:editable="false"
	                android:hint="请输入"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="60sp"
	            android:orientation="horizontal"
	            >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:textColor="#388E8E"
	                android:text="有效期间："/>
	            <EditText 
	                android:id="@+id/editText_effective"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:textSize="30dp"
	                android:lines="2"
	                android:editable="false"
	                android:hint="请输入"/>
	        </LinearLayout>
	    </LinearLayout>
	    

	    <LinearLayout
	        android:layout_width="0sp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:orientation="vertical" 
	        android:gravity="center">

	        <ImageView
	            android:layout_gravity="center_vertical"
	            android:id="@+id/imageView"
	            android:layout_width="306sp"
	            android:layout_height="378sp" 
	            android:src="@drawable/photo"/>

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10sp"
	            android:layout_marginTop="10sp" 
	           
	            android:textSize="26sp"
	            android:textColor="#000000"
	            android:text=""/>
	       
	    </LinearLayout>
<LinearLayout 
	        android:layout_width="0sp"
	        android:layout_weight="1.5"
	        android:layout_height="match_parent"
	        android:gravity="bottom"
	        android:orientation="vertical">
	          <EditText 
	            android:id="@+id/editText_info"
	            android:layout_width="match_parent"
	            android:editable="false"
	            android:layout_height="200sp"
	            android:textSize="20sp"
	            android:text=""
	            android:gravity="bottom"/>
	        <Button 
	            android:id="@+id/button_open"
	            android:layout_width="match_parent"
	            android:layout_height="80sp"
	            android:textSize="26sp"
	            android:text="打开设备"/>
	        <Button 
	            android:id="@+id/button_clear"
	            android:layout_width="match_parent"
	            android:layout_height="80sp"
	            android:textSize="26sp"
	            android:text="清空"/>
	        <Button 
	            android:id="@+id/button_close"
	            android:layout_width="match_parent"
	            android:layout_height="80sp"
	            android:textSize="26sp"
	            android:text="关闭设备"/>
	        <Button 
	            android:id="@+id/button_finish"
	            android:layout_width="match_parent"
	            android:layout_height="80sp"
	            android:textSize="26sp"
	            android:text="退出"/>
	    </LinearLayout>
	</LinearLayout>
    

</RelativeLayout>
