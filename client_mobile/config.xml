    <!-- Defines the app's starting page in the top-level web assets directory.  -->
    <content src="index.html" />

    <!-- Controls which network requests (images, XHRs, etc) are allowed to be made (via cordova native hooks).  -->
    <access origin="*" />

    <!-- Allow links to xxxxxx -->
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />

    <!-- Controls which URLs the app is allowed to ask the system to open. -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="wein:*" />
    <allow-intent href="alipay:*" />

    <platform name="android">
        <allow-intent href="market:*" />

        <!-- disable the splashscreen -->
        <!-- <preference name="SplashScreenDelay" value="0" /> -->


        <!--  -->
        <hook type="after_prepare" src="scripts/after_prepare/index.js" />

        <!-- icons -->
