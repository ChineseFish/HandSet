<?xml version='1.0' encoding='utf-8'?>
<widget 
    id="IAmYourDad" 
    version="0.0.1" 
    android-packageName="com.tongda.putuoshanlvyoubashi"
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>普陀山旅游巴士</name>
    <description>
        普陀山旅游巴士.
    </description>
    <author email="565828928@qq.com">
        gtzn
